<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Search Donors — Gifted Veins</title>
  <link rel="icon" href="/img/favicon.ico" />
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/materialize.min.css" />
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body class="gv-light">

  <header class="site-header">
    <nav class="nav white">
      <div class="container nav-inner">
        <a href="/" class="brand">
          <span class="brand-title">Gifted Veins</span>
        </a>
        <div class="nav-actions">
          <a href="/donate" class="btn btn-primary">Donate</a>
          <a href="/" class="btn btn-ghost">Home</a>
        </div>
      </div>
    </nav>
  </header>

  <main class="container">
    <div class="search-bar card">
      <form action="/bank" class="search-form">
        <select name="blood" class="browser-default">
          <option value="">Any blood group</option>
          <option value="A">A</option>
          <option value="B">B</option>
          <option value="O">O</option>
          <option value="AB">AB</option>
        </select>

        <input name="city" type="text" placeholder="City" />

        <button class="btn btn-primary">Search</button>
      </form>
    </div>

    <div class="donors-grid">
      <% if (docs.length === 0) { %>
        <div class="empty card center">
          <p>No donors found. Try different filters.</p>
        </div>
      <% } else { %>
        <% docs.slice().reverse().forEach((doc) => { %>
          <article class="donor-card card">
            <div class="donor-top">
              <h3 class="donor-name"><%= doc.name.substr(0, 30) %></h3>
              <div class="donor-blood"><%= doc.bloodGroup %></div>
            </div>

            <div class="donor-meta">
              <div><strong>City:</strong> <%= doc.city.substr(0, 18) %></div>
              <div><strong>Amount:</strong> <%= doc.amount %> Pint</div>
            </div>

            <div class="donor-actions">
              <a href="tel:<%= doc.phone %>" class="btn btn-outline small">Call</a>
              <a href="/download-certificate/<%= doc._id %>" class="btn btn-ghost small">Download</a>
              <a href="/email-certificate/<%= doc._id %>" class="btn btn-primary small">Email</a>
            </div>
          </article>
        <% }) %>
      <% } %>
    </div>
  </main>

  <footer class="footer">
    <div class="container footer-inner">
      <div>© 2025 Gifted Veins</div>
    </div>
  </footer>

  <script src="/js/jquery.min.js"></script>
  <script src="/js/materialize.min.js"></script>
</body>
</html>
